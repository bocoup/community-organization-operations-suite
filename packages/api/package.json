{
  "name": "@greenlight/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "essex clean dist/ deploy.zip",
    "start": "nodemon src/index.ts",
    "start:api": "yarn start",
    "bundle": "run-s install_deploy_deps create_deploy_archive",
    "build": "run-s compile copy_assets write_deploy_package",
    "compile": "tsc -b",
    "deploy:integ": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-api-integ --src deploy.zip",
    "deploy:prod": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-api --src deploy.zip",
    "copy_assets": "shx cp -r config/ package.json dist/",
    "install_deploy_deps": "cd dist && npm install --production",
    "create_deploy_archive": "essex zip --baseDir dist deploy.zip '**/*'",
    "write_deploy_package": "ts-node writeDeployPackage.ts"
  },
  "dependencies": {
    "@greenlight/schema": "workspace:packages/schema",
    "config": "^3.3.6",
    "fastify": "^3.15.1",
    "fastify-cors": "^6.0.1",
    "graphql": "^15.5.0",
    "mercurius": "^7.6.1",
    "mercurius-auth": "^1.1.0",
    "pino": "^6.11.3"
  },
  "devDependencies": {
    "@essex/scripts": "^16.0.4",
    "@tsconfig/node14": "^1.0.0",
    "@types/config": "^0.0.38",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.45",
    "@types/pino": "^6.3.8",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
