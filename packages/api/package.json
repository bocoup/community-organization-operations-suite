{
  "name": "@cbosuite/api",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "essex clean dist/ deploy.zip",
    "start": "nodemon src/index.ts",
    "start:api": "yarn start",
    "start:local": "docker-compose up -d && nodemon src/index.ts",
    "build": "run-s compile copy_assets write_deploy_package",
    "build:api": "yarn build",
    "archive": "run-s install_deploy_deps create_deploy_archive",
    "archive:api": "yarn archive",
    "compile": "ttsc -b tsconfig.json",
    "test": "jest",
    "create_mock_data": "ts-node createMockData.ts",
    "deploy:integ": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-api-integ --src deploy.zip",
    "deploy:prod": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-api --src deploy.zip",
    "copy_assets": "shx cp -r config/ package.json dist/",
    "install_deploy_deps": "cd dist && npm install --production",
    "create_deploy_archive": "essex zip --baseDir dist deploy.zip '**/*'",
    "write_deploy_package": "ts-node writeDeployPackage.ts",
    "migrate": "ts-node ./migrateMongo.ts"
  },
  "dependencies": {
    "@cbosuite/schema": "workspace:packages/schema",
    "@graphql-tools/schema": "^7.1.5",
    "apollo-server": "^2.25.2",
    "apollo-server-core": "^2.25.2",
    "apollo-server-fastify": "^2.25.2",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "dataloader": "^2.0.0",
    "detect-libc": "^1.0.3",
    "fastify": "^2.15.3",
    "graphql": "^15.5.1",
    "graphql-subscriptions": "^1.2.1",
    "graphql-tools": "^7.0.5",
    "i18n": "^0.13.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "make-dir": "^3.1.0",
    "mongodb": "^3.6.9",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.6.2",
    "nopt": "^5.0.0",
    "npmlog": "^4.1.2",
    "pino": "^6.11.3",
    "pino-pretty": "^5.0.2",
    "semver": "^7.3.5",
    "tar": "^6.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@essex/babel-config": "^17.0.1",
    "@essex/jest-config": "^16.0.1",
    "@essex/scripts": "^17.0.1",
    "@tsconfig/node14": "^1.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.38",
    "@types/faker": "^5.5.5",
    "@types/i18n": "^0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8",
    "@types/lodash": "^4.14.170",
    "@types/migrate-mongo": "^8",
    "@types/mongodb": "^3.6.18",
    "@types/node": "^14.17.3",
    "@types/nodemailer": "^6",
    "@types/pino": "^6.3.8",
    "@types/pino-pretty": "^4.7.0",
    "@types/uuid": "^8.3.0",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "migrate-mongo": "^8.2.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-jest": "^0.0.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.4",
    "typescript-transform-paths": "^2.2.4"
  }
}
