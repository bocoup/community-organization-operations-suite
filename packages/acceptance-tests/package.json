{
  "name": "@cbosuite/acceptance-tests",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "run-tests": "playwright test --browser=all",
    "debug-tests": "PWDEBUG=1 playwright test",
    "build": "tsc -b .",
    "install-browsers": "playwright install",
    "install-deps": "playwright install",
    "test-with-api": "start-server-and-test 'yarn start:api' 'http-get://localhost:3030/.well-known/apollo/server-health' 'yarn run-tests'",
    "test-with-app": "start-server-and-test 'yarn start:webapp' 'http-get://localhost:3000/' 'yarn test-with-api'",
    "start-acceptance-tests": "NODE_CONFIG_ENV=ci yarn test-with-app",
    "acceptance:test": "run-s install-deps install-browsers start-acceptance-tests"
  },
  "devDependencies": {
    "@playwright/test": "^1.15.1",
    "@tsconfig/node14": "^1.0.1",
    "@types/config": "^0.0.39",
    "@types/node": "^16.10.2",
    "config": "^3.3.6",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
