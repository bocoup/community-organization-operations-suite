{
	"name": "@greenlight/webapp",
	"version": "0.0.1",
	"scripts": {
		"clean": "essex clean dist/ out/ .next node_modules/.cache/",
		"start": "nodemon index.ts",
		"start:webapp": "yarn start",
		"build": "run-s next_build server_build",
		"bundle": "run-s install_deploy_deps create_deploy_archive",
		"deploy:prod": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-app --src deploy.zip",
		"deploy:integ": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-app-integ --src deploy.zip",
		"next_build": "next build",
		"server_compile": "tsc -b tsconfig.server.json",
		"server_build": "run-s server_compile copy_assets write_deploy_package",
		"write_deploy_package": "ts-node --project tsconfig.server.json writeDeployPackage.ts",
		"copy_assets": "shx cp -r *.js *.json config/ .next/ dist/",
		"install_deploy_deps": "cd dist && npm install --production",
		"create_deploy_archive": "essex zip --baseDir dist deploy.zip '**/*'",
		"plop": "plop",
		"plop:webapp": "plop"
	},
	"dependencies": {
		"@apollo/client": "^3.3.18",
		"@fluentui/react": "^8.14.9",
		"@greenlight/schema": "workspace:packages/schema",
		"@reduxjs/toolkit": "^1.5.1",
		"bootstrap": "^5.0.0-beta3",
		"classnames": "^2.3.1",
		"config": "^3.3.6",
		"express": "^4.17.1",
		"formik": "^2.2.6",
		"graphql": "^15.5.0",
		"lodash": "^4.17.21",
		"next": "^10.2.0",
		"next-auth": "^3.23.0",
		"react": "^17.0.2",
		"react-bootstrap": "^1.6.0",
		"react-dom": "^17.0.2",
		"react-dom-confetti": "^0.2.0",
		"react-redux": "^7.2.4",
		"redux": "^4.1.0",
		"redux-persist": "^6.0.0",
		"yup": "^0.32.9"
	},
	"license": "MIT",
	"devDependencies": {
		"@essex/scripts": "^16.0.4",
		"@tsconfig/node14": "^1.0.0",
		"@types/config": "^0.0.38",
		"@types/express": "^4.17.11",
		"@types/node": "^14.14.45",
		"@types/react": "^17.0.5",
		"@types/react-dom": "^17.0.5",
		"@types/yup": "^0.29.11",
		"autoprefixer": "^10.2.5",
		"babel-plugin-transform-define": "^1.3.2",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"plop": "^2.7.4",
		"postcss": "^8.2.15",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-hover-media-feature": "^1.0.1",
		"postcss-preset-env": "^6.7.0",
		"sass": "^1.32.13",
		"shx": "^0.3.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	}
}
