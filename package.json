{
  "name": "@greenlight/parent",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "postinstall": "husky install",
    "predeploy": "az account set -s Resilience",
    "clean:all": "yarn workspaces foreach -pv run clean",
    "build:all": "yarn workspaces foreach -pvt run build",
    "test:all": "yarn workspaces foreach -pvt run test",
    "start:all": "yarn workspaces foreach -piv run start",
    "deploy:integ:all": "yarn workspaces foreach -piv run deploy:integ",
    "deploy:prod:all": "yarn workspaces foreach -piv run deploy:prod",
    "bundle:all": "yarn workspaces foreach -piv run bundle",
    "lint:all": "essex lint",
    "lint:fix": "essex lint --fix",
    "git_is_clean": "essex git-is-clean",
    "prettify": "essex prettify",
    "ci": "run-s build:all lint:all test:all git_is_clean"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@essex/eslint-config": "^15.0.4",
    "@essex/eslint-plugin": "^15.0.4",
    "@essex/jest-config": "^15.0.3",
    "@essex/scripts": "^16.0.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/prettier": "^2.2.3",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@types/react": "17.0.4",
    "@types/react-dom": "17.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "dependencies": {
    "@fluentui/react-hooks": "^8.2.0"
  }
}
